{
    "extends": "./tsconfig.node.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "noEmit": false,
        "module": "CommonJS",
        "target": "ES2022",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": false,
        "allowImportingTsExtensions": false
    },
    "include": [
        "electron"
    ]
}